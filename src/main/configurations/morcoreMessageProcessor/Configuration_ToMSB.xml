<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">

    <Adapter name="MSB_GetMelding">
        <Receiver name="MSB_GetMelding">
            <JavaListener name="MSB_GetMelding" />
        </Receiver>

        <Pipeline>

            <Exits>
                <Exit name="Exit" state="SUCCESS" />
                <Exit name="Exception" state="ERROR" />
                <Exit name="Reject" state="REJECTED" />
            </Exits>

            <SenderPipe name="Send2MSB" getInputFromFixedValue="&lt;dummyInput/>">
                <HttpSender name="Send2MSB" methodType="GET" />
                <Param name="url"
                    xpathExpression="concat('${MSB.taak.API.root-url}/api/v1/melding/', $uuid)">
                    <Param name="uuid" sessionKey="uuid" />
                </Param>
            </SenderPipe>
        </Pipeline>
    </Adapter>

    <Adapter name="MSB_GetTaakOpdracht">
        <Receiver name="MSB_GetTaakOpdracht">
            <JavaListener name="MSB_GetTaakOpdracht" />
        </Receiver>

        <Pipeline>

            <Exits>
                <Exit name="Exit" state="SUCCESS" />
                <Exit name="Exception" state="ERROR" />
                <Exit name="Reject" state="REJECTED" />
            </Exits>

            <SenderPipe name="Send2MSB">
                <HttpSender name="Send2MSB" methodType="GET" />
                <Param name="meldingUuid" sessionKey="originalMessage"
                    xpathExpression="//meldingUuid" />
                <Param name="url"
                    value="${MSB.taak.API.root-url}api/v1/melding/${meldingUuid}/taakopdracht" />
                <Forward name="success" path="Exit" />
                <Forward name="exception" path="Exception" />
            </SenderPipe>
        </Pipeline>
    </Adapter>

    <Adapter name="MSB_PostNotificatie">
        <Receiver name="MSB_PostNotificatie">
            <JavaListener name="MSB_PostNotificatie" />
        </Receiver>

        <Pipeline>

            <Exits>
                <Exit name="Exit" state="SUCCESS" />
                <Exit name="Exception" state="ERROR" />
                <Exit name="Reject" state="REJECTED" />
            </Exits>

            <SenderPipe name="Send2MSB" getInputFromSessionKey="originalMessage">
                <HttpSender name="Send2MSB" methodType="POST" contentType="application/json"
                    headersParams="ApiKey,ApplicationElementId" />
                <Param name="url" value="${MSB.taak.API.root-url}" type="STRING">
                </Param>
                <Param name="ApiKey" authAlias="Ultimo" pattern="{username}" />
                <Param name="ApplicationElementId" authAlias="Ultimo" pattern="{password}" />
                <Forward name="success" path="Exit" />
                <Forward name="exception" path="Exception" />
            </SenderPipe>
        </Pipeline>
    </Adapter>

</Module>